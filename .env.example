# HDC Robot Controller Environment Configuration
# Copy this file to .env and set appropriate values

# Security Configuration
SECRET_KEY=your-256-bit-secret-key-here
JWT_SECRET=your-jwt-signing-secret-here
ENCRYPTION_KEY=your-aes-256-encryption-key-here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/hdc_robot_db
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4
API_TIMEOUT=30

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here
GRAFANA_API_KEY=your-grafana-api-key-here

# Security Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Testing Configuration (for development only)
TEST_PASSWORD=SecureTestPassword123!
TEST_API_KEY=test-api-key-for-development-only

# Hardware Configuration
CUDA_ENABLED=true
GPU_MEMORY_FRACTION=0.8
CPU_THREADS=4

# ROS 2 Configuration
ROS_DOMAIN_ID=0
RMW_IMPLEMENTATION=rmw_fastrtps_cpp